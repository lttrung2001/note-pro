<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lttrung.notepro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NoteProApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotePro"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.changeprofile.ChangeProfileActivity"
            android:exported="false"
            android:label="@string/back"
            android:parentActivityName=".ui.viewprofile.ViewProfileActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.forgotpassword.CreateNewPasswordActivity"
            android:exported="true"
            android:label="@string/back"
            android:parentActivityName=".ui.forgotpassword.SendInstructionsResultActivity"
            android:theme="@style/Theme.NotePro">
            <tools:validation testUrl="https://www.google.com" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.google.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.forgotpassword.SendInstructionsResultActivity"
            android:exported="false"
            android:label="@string/back"
            android:parentActivityName=".ui.forgotpassword.ForgotPasswordActivity"
            android:theme="@style/Theme.NotePro.NoActionBar" />
        <activity
            android:name=".ui.forgotpassword.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/back"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.viewprofile.ViewProfileActivity"
            android:exported="false"
            android:label="@string/your_info"
            android:parentActivityName=".ui.setting.SettingActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.editnote.EditNoteActivity"
            android:exported="false"
            android:label="@string/edit_note"
            android:parentActivityName=".ui.notedetails.NoteDetailsActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.notedetails.NoteDetailsActivity"
            android:exported="false"
            android:label="@string/note_details"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.NotePro.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.NotePro.NoActionBar" />
        <activity
            android:name=".ui.showmembers.ShowMembersActivity"
            android:exported="false"
            android:label="@string/members"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.addnote.AddNoteActivity"
            android:exported="false"
            android:label="@string/add_note"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.entry.LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.NotePro.NoActionBar" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false"
            android:label="@string/action_settings"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.NotePro" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NotePro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.changepassword.ChangePasswordActivity"
            android:exported="false"
            android:label="@string/change_password"
            android:parentActivityName=".ui.setting.SettingActivity"
            android:theme="@style/Theme.NotePro" />
    </application>

</manifest>